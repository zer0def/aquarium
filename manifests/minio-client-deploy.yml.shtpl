---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${MC_NAME}
  namespace: ${NAMESPACES_STORAGE}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ${MC_NAME}
  template:
    metadata:
      labels:
        app: ${MC_NAME}
    spec:
      containers:
      - name: mc
        image: minio/mc
        command: ['/bin/sh', '-c', 'while true; do sleep 86400; done']
